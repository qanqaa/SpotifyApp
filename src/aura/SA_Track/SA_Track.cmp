<aura:component description="SA_Track" implements="flexipage:availableForAllPageTypes,force:appHostable"
                access="global">
    <aura:attribute name="image" type="String"/>
    <aura:attribute name="title" type="String"/>
    <aura:attribute name="id" type="String"/>
    <aura:attribute name="duration" type="Integer"/>
    <aura:attribute name="artists" type="Object[]"/>

    <lightning:card>
        <div class="slds-p-around_medium" style="height:240px; width:200px; cursor:pointer; background-color:lightgrey;" onclick="">
            <img class="slds-align_absolute-center" src="{!v.image}" style="width:150px; height:150px;"/>
            <output class="slds-align_absolute-center slds-text-title_bold"
                    value="{!v.title}"></output>
            <output class="slds-align_absolute-center"
                    value="{!v.duration}"></output>
            <output class="slds-align_absolute-center"
                    value="{!v.artists[0].name}"></output>
        </div>
    </lightning:card>
</aura:component>
